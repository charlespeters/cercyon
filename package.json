{
  "name": "cercyon",
  "version": "0.0.1",
  "description": "front-end boilerplate",
  "scripts": {
    "start": "npm-run-all clean --parallel watch server",
    "clean": "rimraf ./dist",
    "build:hbs": "hbs --partial ./views/components/* --output ./dist/ -- ./views/index.hbs",
    "build:js": "rollup -c rollup.config.js -o ./dist/bundle.js",
    "build:css": "postcss -c .postcss.json",
    "build:images": "imagemin ./assets/images/* -o ./dist/images/",
    "build:svg": "svgo -f ./assets/icons/ && svgshelf ./assets/icons/\\*.svg ./dist/output.svg",
    "build": "npm-run-all build:*",
    "prebuild": "mkdirp dist",
    "lint:css": "stylelint './lib/**/*.css'",
    "lint:js": "standard './assets/scripts/**/*.js' | snazzy",
    "lint": "npm-run-all lint:*",
    "watch:hbs": "watch 'npm run build:hbs' views",
    "watch:css": "watch 'npm run build:css' assets/styles",
    "watch:js": "watch 'npm run build:js' assets/scripts",
    "watch": "npm-run-all watch:*",
    "prewatch": "npm run build",
    "server": "browser-sync start --files \"./dist/*.html,./dist/*.js,./dist/*.css\" --server dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "browser-sync": "^2.11.1",
    "cssnano": "^3.7.3",
    "handlebars-layouts": "^3.1.3",
    "hbs-cli": "^1.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "postcss-reporter": "^1.3.3",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.5",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "snazzy": "^4.0.1",
    "standard": "^7.1.2",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "svgo": "^0.6.6",
    "svgshelf": "^1.0.3",
    "watch": "^0.19.1"
  },
  "dependencies": {
    "gradients": "^1.0.0",
    "obsidian.css": "^2.0.5"
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ]
  }
}
